<Window x:Class="quries_chatbot.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash Screen" Height="700" Width="900" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#0F8A69">
    <Grid>
        <!-- Simple Text Block for splash screen -->
        <TextBlock Text="ASK U" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="White" FontWeight="Bold" />

        <!-- Subtitle Text Block -->
        <TextBlock Text="Your Smart Assistant" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" Foreground="White" Margin="0,0,0,30"/>

        <!-- ProgressBar as a loading indicator -->
        <ProgressBar Name="Loader" Width="200" Height="10" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                     Margin="0,60,0,0"
                     IsIndeterminate="True" 
                     Foreground="White" 
                     Background="#2C2C2E" />
    </Grid>
</Window>
